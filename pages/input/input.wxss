/* pages/proj4user/proj4user.wxss */
@import "../utils/iconfont.wxss";
.form-cell_title {
  margin-bottom: 10px;
  font-size: medium;
}
#input{
  margin-top:180px;
}
.form-cell_title-placeholder {
  font-size: small;
  color: lightgray;
}
page {
  background: rgba(248, 195, 204, 0.87);
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.iconfont {
  font-size: 40px;
}


.menu-add-box {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  left: calc(50% - 60rpx);
  top: calc(50% - 60rpx);
  background: var(--bg);
  transition: all .5s;
}

.menu-add-box::after {
  content: '^点我吧^';
  position: absolute;
  bottom: -20rpx;
  font-size: 22rpx;
  color: #222;
  font-weight: bold;
  font-style: italic;
  opacity: 1;
}











